package {
    default_team: "trendy_team_aaos_framework",
    default_applicable_licenses: ["Android-Apache-2.0"],
}

python_defaults {
    name: "torq_defaults",
    srcs: [
        "torq.py",
        "command.py",
        "command_executor.py",
        "validation_error.py",
        "device.py",
        "config_builder.py",
        "open_ui.py",
    ],
}

python_binary_host {
    name: "torq",
    main: "torq.py",
    defaults: ["torq_defaults"],
}

python_test_host {
    name: "torq_unit_test",
    main: "tests/torq_unit_test.py",
    srcs: ["tests/torq_unit_test.py"],
    defaults: ["torq_defaults"],
    version: {
        py3: {
            enabled: true,
            embedded_launcher: false,
        },
    },
    test_options: {
        unit_test: true,
    },
}

